<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

<label><p>Name:</p></label>
<p><input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"></p>

<p><label>Choose existing Owner:</label></p>
<%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner.id == owner.id %>>
    <%=owner.name%></input>
  <%end%>

<label><p>Create new Owner:</p></label>
<p><label>name:</label></p>
<p><input  type="text" name="owner[name]" id="owner_name"></input></p>
<p><input type="submit" value="Update Pet"></p>
</form>
